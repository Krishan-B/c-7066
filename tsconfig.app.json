{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "tsBuildInfoFile": "./tsconfig.app.tsbuildinfo",

    /* Type Checking - Optimized for Performance */
    "strict": true, // Enable strict mode

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Additional settings - Performance Optimized */
    "allowJs": true,
    "esModuleInterop": true, // Good for compatibility
    "incremental": true,
    "preserveWatchOutput": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "skipLibCheck": true, // Explicitly keep skipLibCheck for faster builds if needed
    "forceConsistentCasingInFileNames": true // Enforce consistent casing
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**/*",
    "supabase/functions/**/*",
    "**/.cache/**/*",
    "**/tmp/**/*",
    "**/temp/**/*",
    "**/.vscode-test/**/*",
    "**/.history/**/*"
  ]
}
