# Trading Pro CFD Platform - Environment Configuration
# Phase 1B Security Implementation

# Database Configuration
DATABASE_URL=your_database_url_here
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OAuth Provider Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here

# Apple OAuth (if implementing Apple Sign In)
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
CSRF_SECRET=your_csrf_protection_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_32_characters_required

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters
SESSION_TIMEOUT=3600

# 2FA Configuration
TOTP_ISSUER=TradePro
TOTP_WINDOW=1

# Security Headers and CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Production Security (Only set in production)
# SECURE_COOKIES=true
# HTTPS_ONLY=true
# HSTS_MAX_AGE=31536000
