{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,

    /* Node.js specific */
    "types": ["node"],
    "composite": true
  },
  "include": ["vite.config.ts", "scripts/**/*.ts"]
}
