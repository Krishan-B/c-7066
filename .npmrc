# NPM Configuration for Trade-Pro
# Optimized for performance and security

# Performance settings
cache=/tmp/.npm
prefer-offline=true
audit=false
fund=false
optional=false
update-notifier=false

# npm settings for VS Code extension compatibility
shamefully-hoist=true
public-hoist-pattern[]=*tailwindcss*

# Security settings
audit-level=high

# Package installation preferences
save-exact=true
engine-strict=true

# Registry settings (use default npm registry)
registry=https://registry.npmjs.org/

# Progress and logging
progress=true
loglevel=warn

# Development optimizations
optional=false
dev=false

# Package lock settings
package-lock=true
package-lock-only=false

# Workspace settings
workspaces-update=true

# Node.js settings
node-version=20.19.2
