{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"]
    },
    "composite": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "@testing-library/jest-dom", "node"]
  },
  "include": ["../tests/**/*", "../**/*.test.ts", "../**/*.test.tsx", "../**/*.spec.ts", "../**/*.spec.tsx"],
  "exclude": ["../node_modules", "../scripts/**/*"]
}
