# Development Environment Configuration
# This file should be copied to .env.local for actual development

NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration (placeholder)
DATABASE_URL=postgresql://localhost:5432/tradepro_dev
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# OAuth Provider Configuration (development placeholders)
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret
GITHUB_CLIENT_ID=test_github_client_id
GITHUB_CLIENT_SECRET=test_github_client_secret
MICROSOFT_CLIENT_ID=test_microsoft_client_id
MICROSOFT_CLIENT_SECRET=test_microsoft_client_secret

# Security Configuration (development only - DO NOT use in production)
JWT_SECRET=development_jwt_secret_32_characters_minimum_length
CSRF_SECRET=development_csrf_secret_32_characters_minimum
ENCRYPTION_KEY=development_encryption_32_chars_key
SESSION_SECRET=development_session_secret_32_characters_minimum

# Session Configuration
SESSION_TIMEOUT=3600

# 2FA Configuration
TOTP_ISSUER=TradePro-Dev
TOTP_WINDOW=2

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=200
