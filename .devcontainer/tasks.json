{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Workspace Keep-Alive",
      "type": "shell",
      "command": "${workspaceFolder}/.devcontainer/workspace-optimize.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "Monitor Workspace Health",
      "type": "shell",
      "command": "while true; do echo \"$(date): Memory: $(free -h | awk 'NR==2{printf \"%.1f%%\", $3/$2*100}') | Disk: $(df -h /workspaces | awk 'NR==2{print $5}') | Processes: $(ps aux | wc -l)\"; sleep 300; done",
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Clean Workspace",
      "type": "shell",
      "command": "rm -rf .eslintcache node_modules/.cache .vite && echo 'Workspace cleaned successfully'",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
