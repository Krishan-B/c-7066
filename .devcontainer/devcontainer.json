  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "Prisma.prisma",
        "ms-azuretools.vscode-docker",
        "GitHub.vscode-github-actions",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "Gruntfuggly.todo-tree",
        "streetsidesoftware.code-spell-checker",
        "yoavbls.pretty-ts-errors",
        "wayou.vscode-todo-highlight",
        "vscode-icons-team.vscode-icons",
        "aaron-bond.better-comments",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag",
        "dsznajder.es7-react-js-snippets",
        "xabikos.JavaScriptSnippets",
        "firsttris.vscode-jest-runner",
        "Orta.vscode-jest",
        "ms-playwright.playwright",
        "vitest.explorer",
        "zixuanchen.vitest-explorer",
        "Vue.volar",
        "Vue.vscode-typescript-vue-plugin",
        "msjsdiag.debugger-for-chrome",
        "msjsdiag.vscode-react-native",
        "syler.sass-indented",
        "stylelint.vscode-stylelint",
        "csstools.postcss",
        "Supabase.supabase",
        "GraphQL.vscode-graphql",
        "apollographql.vscode-apollo",
        "rangav.vscode-thunder-client",
        "adpyke.codesnap",
        "WallabyJs.quokka-vscode",
        "WallabyJs.wallaby-vscode",
        "SonarSource.sonarlint-vscode",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools",
        "shd101wyy.markdown-preview-enhanced",
        "DavidAnson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "cweijan.vscode-postgresql-client2"
      ],
      // === VS CODE SETTINGS === // Moved settings block here
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
        "typescript.tsdk": "node_modules/typescript/lib",
        "files.exclude": {
          "**/.git": true,
          "**/.DS_Store": true,
          "**/node_modules": true,
          "**/.next": true,
          "**/dist": true,
          "**/coverage": true
        }
      }
    }
  },

  // === FEATURES ===
  // ...existing code...
  // The "settings" block that was previously here has been moved up.
  // ...existing code...

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "dockerComposeVersion": "latest",
      "dockerVersion": "latest"
    },
    "ghcr.io/devcontainers/features/node:2": {
      "version": "20",
      "installNpmGlobally": true,
      "npmGlobalPackages": [
        "@types/node",
        "@types/react",
        "@types/react-dom",
        "@types/jest",
        "@types/cypress",
        "@types/supabase-js"
      ]
    }
  },

  // === LIFECYCLE HOOKS ===
  "postCreateCommand": "npm install -g pnpm && pnpm install --frozen-lockfile && pnpm run setup:dev",
  "postAttachCommand": "pnpm run dev",

  // === PORT FORWARDING ===
  "forwardPorts": [3000, 5173, 6006, 5432, 5433],
  "portsAttributes": {
    "3000": { "label": "Application (Next.js Dev)" },
    "5173": { "label": "Vite Dev Server" },
    "6006": { "label": "Storybook" },
    "5432": { "label": "PostgreSQL (Supabase)" },
    "5433": { "label": "Supabase Studio" }
  },

  // === VS CODE SETTINGS ===
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/node_modules": true,
      "**/.next": true,
      "**/dist": true,
      "**/coverage": true
    }
  },

  // === ENVIRONMENT VARIABLES ===
  // "remoteEnv": {
  //  "DATABASE_URL": "${localEnv:DATABASE_URL}",
  //  "NEXTAUTH_SECRET": "${localEnv:NEXTAUTH_SECRET}",
  //  "NEXTAUTH_URL": "https://localhost:3000"
  // },

  // === DOCKER CONFIGURATION ===
  "runArgs": ["--init"],
  "mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"],
  "overrideFeatureInstallOrder": [
    "ghcr.io/devcontainers/features/common-utils",
    "ghcr.io/devcontainers/features/git",
    "ghcr.io/devcontainers/features/github-cli"
  ],

  // === WORKSPACE CONFIGURATION ===
  "workspaceFolder": "/workspaces/Trade-Pro",
  "shutdownAction": "stopContainer"
}
