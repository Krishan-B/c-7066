/**
 * Client-side tsconfig.json
 */
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "..",
    "paths": {
      "@/*": ["./src/*"],
      "@types/*": ["../types/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "../types/**/*.ts"],
  "exclude": ["node_modules", "../server/**/*", "../shared/**/*"]
}
